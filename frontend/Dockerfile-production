# Frontend Dockerfile for Production
# ====================================
# Multi-stage build for optimized production image

# Stage 1: Build the React application
FROM node:18-alpine AS build

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy workspace files from root
COPY pnpm-lock.yaml* pnpm-workspace.yaml* ./
COPY frontend/package.json ./frontend/

# Install dependencies for frontend workspace only
RUN if [ -f pnpm-lock.yaml ]; then \
      pnpm install --frozen-lockfile --filter alfajr; \
    else \
      pnpm install --filter alfajr; \
    fi

# Copy frontend source code
COPY frontend/ ./frontend/

# Set working directory to frontend
WORKDIR /app/frontend

# Set build-time environment variables
# This will be overridden by the actual VPS IP during deployment
ARG VITE_API_URL=http://localhost:3001
ENV VITE_API_URL=${VITE_API_URL}

# Build the application
RUN pnpm run build

# Verify build output
RUN ls -la dist/ || ls -la build/ || echo "Build output not found"

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Copy built assets from build stage
# Vite outputs to 'dist' folder by default
COPY --from=build /app/frontend/dist /usr/share/nginx/html

# Copy custom nginx configuration
COPY --from=build /app/frontend/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
