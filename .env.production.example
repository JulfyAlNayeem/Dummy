# Production Environment Variables
# Copy this file to .env.production and update all values

# Database Configuration
MONGO_USER=dummyuser
MONGO_PASSWORD=YourStrongMongoPassword123!
MONGO_DATABASE=dummy

# Redis Configuration (optional - uses default if not set)
REDIS_URL=redis://redis:6379

# Application Secrets (Generate strong random strings)
SESSION_SECRET=your-super-secure-session-secret-min-32-chars
ACCESS_TOKEN_SECRET=your-super-secure-access-token-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-min-32-chars

# Application Configuration
NODE_ENV=production
PORT=3001

# CORS Origins (comma-separated)
ORIGIN_URL=https://yourdomain.com,http://localhost:3002

# Docker Hub (optional - for pushing images)
DOCKERHUB_USERNAME=your-dockerhub-username

# Domain (for SSL setup)
DOMAIN=yourdomain.com